<div class="col-md-4 blog-main box text-center">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h3 class="panel-title" id="title_name">
        <%= link_to category.name, category_path(category) %>
      </h3>
      <b><%= t "title.word_count", word_count: category.words.size %></b>
      <p><%= category.description %></p>
    </div>
    <div class="panel-body">
      <div class="btn-group" role="group" aria-label="...">
        <%= link_to t("btn.start"), "#", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
