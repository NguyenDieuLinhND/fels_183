<li><%= f.label f.object.word.name %></li>
<div class="lesson_word">
  <% f.object.word.answers.each do |answer| %>
    <div class="word_answer">
      <%= f.radio_button :answer_id, answer.id,
        disabled: f.object.lesson.time_out? %>
      <%= answer.answer_content %>
    </div>
  <% end %>
</div>
<% if f.object.lesson.checked? %>
  <div>
    <% if f.object.answer && f.object.answer.is_correct? %>
      <p class="label label-success">
        <%= t "answer.correct" %>
      </p>
    <% else %>
      <p class="label label-danger">
        <%= t "answer.wrong" %>
      </p>
    <% end %>
  </div>
<% end %>
