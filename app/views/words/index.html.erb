<% provide :title, t("btn.words") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <br>
    <p class="select-category"><%= t "title.category" %></p>
    <%= form_tag words_path, method: :get do %>
      <div class="col-md-3">
        <%= select_tag :category_id, options_for_select(@categories,
          params[:category_id]), include_blank: t("title.all"),
          class: "selectpicker form-control select-tag" %>&nbsp;
      </div>
      <% Settings.status_word.each do |status, value| %>
        <div class="col-md-3 select-rd">
          <%= radio_button_tag :word_status, value, params[:word_status] == value %>
          <%= label_tag value %>
        </div>
      <% end %>
      <%= submit_tag t("btn.filter"), class: "btn btn-primary btn-filter" %>
    <% end %>
  </div>
</div>

<div class="row center">
  <div class="col-md-10 col-md-offset-1">
    <hr>
    <% @words.each do |word| %>
      <div class="col-md-3">
        <div class="row word-name"><%= word.name %></div>
      </div>
    <% end %>
    <div class="center">
      <%= will_paginate %>
    </div>
  </div>
</div>
