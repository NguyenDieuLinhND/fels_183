<% if user_signed_in? %>
  <br>
  <div class="row">
    <div class="col-xs-3 left-content">
      <div class="row text-center">
        <%= link_to image_tag(current_user.avatar, alt: current_user.fullname,
          size: Settings.size_avatar), user_path(current_user) %>
        <br>
        <h3><%= link_to current_user.fullname, user_path(current_user) %></h3>
      </div>
      <div class="row text-center">
        <p class="text-center"><%= t "home.learned", word_learned: @word_learned.size %></p>
      </div>
    </div>
    <div class="col-xs-9 right-content">
      <div class="row text-cente btn-top">
        <%= link_to t("btn.words"), words_path,
          class: "btn btn-primary button-top" %>
        <%= link_to t("btn.lesson"), categories_path, class: "btn btn-primary button-top",
          id:"lesson" %>
        <h2 class="text-left"><%= t "home.lessons" %></h2>
      </div>

      <div class="lesson-list">
        <table class="table table-striped">
          <thead class="thead_table_word">
            <tr>
              <td><%= t "title.lesson.created_date" %></td>
              <td><%= t "title.lesson.subject" %></td>
              <td><%= t "title.lesson.status" %></td>
              <td><%= t "title.lesson.duration" %></td>
              <td><%= t "title.lesson.question_number" %></td>
              <td><%= t "title.lesson.spent_time" %></td>
              <td><%= t "title.lesson.score" %></td>
              <td></td>
            </tr>
          </thead>
          <tbody>
            <br>
            <% if @lessons.any? %>
              <% @lessons.each do |lesson| %>
                <tr>
                  <td><%= lesson.created_at.to_date %></td>
                  <td><%= lesson.category.name %></td>
                  <td>
                    <p class="<%= "#{status_lesson lesson}" %>">
                      <%= lesson.status %>
                    </p>
                  </td>
                  <td><%= Settings.time_duration %></td>
                  <td><%= lesson.results.count %></td>
                  <td><%= lesson.spent_time %></td>
                  <td>
                    <%= t "title.count_correct", count_correct: lesson.score %>
                    <%= t "title.results_count", results_count: lesson.results.count %>
                  </td>
                  <td><%= link_to t("btn.#{lesson.init? ? "start" : "view"}"), lesson,
                    class: "#{status_button lesson}" %></td>
                </tr>
              <% end %><br />
            <% end %>
          </tbody>
        </table>
        <div class="center"><%= will_paginate @lessons %></div>
      </div>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <%= link_to image_tag "dcf5ee9e-6673-4e6d-8ca9-ab27ee33bd3b.png",
      class: "thumbnail" %>
    <center><h1><%= t "header.logo" %></h1></center>
  </div>
<% end %>
